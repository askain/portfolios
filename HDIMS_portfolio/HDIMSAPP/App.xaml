<Application   
  x:Class="HDIMSAPP.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:HDIMSAPP.Common"
    xmlns:controls="clr-namespace:HDIMSAPP.Controls">
    

    <Application.ApplicationLifetimeObjects>
        <local:UserInteractionMonitor />
    </Application.ApplicationLifetimeObjects>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/BoardStyles.xaml"/>
                <ResourceDictionary Source="Assets/Styles.xaml"/>
                <ResourceDictionary Source="Assets/IndicatorStyles.xaml"/>
                <ResourceDictionary Source="Assets/GridViewStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

</Application>